{
  "name": "FunBlocker",
  "version": "0.4",
  "description": "FunBlocker é uma extensão para remover posts chatos do Facebook, como HumorNoFace, JoSuado e outros.'.",
  "content_scripts": [
    {
        "matches": [
            "http://www.facebook.com/*",
            "https://www.facebook.com/*"
        ],
        "js": ["fb.js"]
    }
  ],
  "permissions": [
    "tabs",
    "http://www.facebook.com/*",
    "https://www.facebook.com/*"
  ],
  "background_page": "background.html",
  "options_page": "options.html"
}
