{
  "name": "FunBlocker",
  "version": "0.1",
  "description": "FunBlocker is a script to remove annoying posts in Facebook, mainly funny [re]posts.",
  "content_scripts": [
    {
        "matches": [
            "http://www.facebook.com/*",
            "https://www.facebook.com/*"
        ],
        "js": ["fb.js"]
    }
  ],
  "permissions": [
    "tabs",
    "http://www.facebook.com/*",
    "https://www.facebook.com/*"
  ],
  "background_page": "background.html",
  "options_page": "options.html"
}