{
  "manifest_version": 2,
  "name": "FunBlocker",
  "version": "0.7.2",
  "description": "FunBlocker é uma extensão para remover posts chatos do Facebook, como HumorNoFace, JoSuado e outros.",
  "content_scripts": [
    {
        "matches": [
            "http://www.facebook.com/*",
            "https://www.facebook.com/*"
        ],
        "js": ["fb.js"]
    }
  ],
  "permissions": [
    "contextMenus",
    "tabs",
    "http://www.facebook.com/*",
    "https://www.facebook.com/*"
  ],
  "icons" : {
    "16" : "icon-16.png"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "options_page": "options.html",
  "content_security_policy": "script-src 'self' https://ssl.google-analytics.com; object-src 'self'"
}
