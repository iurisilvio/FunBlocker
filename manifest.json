{
  "name": "FunBlocker",
  "version": "0.6.2",
  "description": "FunBlocker é uma extensão para remover posts chatos do Facebook, como HumorNoFace, JoSuado e outros.",
  "content_scripts": [
    {
        "matches": [
            "http://www.facebook.com/*",
            "https://www.facebook.com/*"
        ],
        "js": ["fb.js"]
    }
  ],
  "permissions": [
    "contextMenus",
    "tabs",
    "http://www.facebook.com/*",
    "https://www.facebook.com/*"
  ],
  "icons" : {
    "16" : "icon-16.png"
  },
  "background_page": "background.html",
  "options_page": "options.html"
}
